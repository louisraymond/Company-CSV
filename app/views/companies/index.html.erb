<h1>Companies</h1>

<div data-controller="search">
  <input
    type="text"
    class="form-control"
    placeholder="Search companies by name, city, or registry number"
    data-action="input->search#search"
    data-search-target="input"
  />

  <div id="results" data-search-target="results" class="mt-3">
    <% if @companies.present? %>
      <h2>Search Results</h2>
      <ul class="list-group mb-4">
        <% @companies.each do |company| %>
          <li class="list-group-item">
            <strong><%= company.name %></strong> â€” <%= company.city %> (<%= company.registry_number %>)
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No matches found.</p>
    <% end %>
  </div>
</div>
